@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <form method="post">
        <h1>Sistema de comunicación segura:</h1>
        <div class="form-group">
            <label for="username">Usuario:</label>
            <input type="text" id="username" name="username" class="form-control" />
        </div>
        <div class="form-group">
            <label for="password">Contraseña:</label>
            <input type="password" id="password" name="password" class="form-control" />
        </div>
        <div class="form-group form-check checkbox-center">
            <input type="checkbox" class="form-check-input" id="generatekeys" name="generatekeys">
            <label class="form-check-label" for="generatekeys">¿Generar llaves?</label>
        </div>
        <button type="submit" class="btn btn-primary">Ingresar</button>
    </form>
</div>